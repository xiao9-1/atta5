#include <iostream>
#include <Windows.h>

using namespace std;

int main()
{
	SetConsoleOutputCP(1251);
	int const n = 15;
	int a[n];
	cout << "Введите элементы массива : "<<endl;
	for (int i = 0; i < n; i++) {
		cin>> a[i];
	}

	int c = 1, cp = 0, flag = 0;
	for (int i = 0; i < n-1; i++)
	{
		if (a[i + 1] > a[i])
		{
			c = c + 1;
			if (c >= 3)
				flag = 1;
		}
		else
		{
			cp = cp + flag;
			flag = 0;
			c = 1;
		}
	}
    cp = cp + flag;
	cout << "Кол-во участков, на которых эл-ты возрастают : " << cp << endl;
    return 0;
}
